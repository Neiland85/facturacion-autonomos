// This is the Prisma schema file for a simple invoicing system
// It defines the data model for users, clients, and invoices 
generator client {
  provider = "prisma-client-js"
}
// Generated by Copilot
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  clientes  Cliente[]
  facturas  Factura[]
  createdAt DateTime @default(now())
}

model Cliente {
  id        Int       @id @default(autoincrement())
  nombre    String
  email     String
  direccion String
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  facturas  Factura[]
  createdAt DateTime  @default(now())
}

model Factura {
  id         Int       @id @default(autoincrement())
  numero     String    @unique
  fecha      DateTime
  total      Float
  pdfUrl     String?
  cliente    Cliente   @relation(fields: [clienteId], references: [id])
  clienteId  Int
  usuario    Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  createdAt  DateTime  @default(now())
}
