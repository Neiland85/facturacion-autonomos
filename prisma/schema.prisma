generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         Int       @id @default(autoincrement())
  nombre     String
  email      String    @unique
  password   String
  clientes   Cliente[]
  facturas   Factura[]
  createdAt  DateTime  @default(now())
}

model Cliente {
  id         Int       @id @default(autoincrement())
  nombre     String
  email      String    @index
  direction  String
  usuarioId  Int       @index
  usuario    Usuario   @relation(fields: [usuarioId], references: [id])
  facturas   Factura[]
  createdAt  DateTime  @default(now())
}

model Factura {
  id          Int       @id @default(autoincrement())
  numero      String    @unique
  fecha       DateTime  @index
  total       Float
  usuarioId   Int       @index
  usuario     Usuario   @relation(fields: [usuarioId], references: [id])
  clienteId   Int       @index
  cliente     Cliente   @relation(fields: [clienteId], references: [id])
  pdfUrl      String?
  createdAt   DateTime  @default(now())
}