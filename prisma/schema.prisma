datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  clients   Client[]
  facturas  Factura[]
  createdAt DateTime @default(now())
}

model Client {
  id         Int      @id @default(autoincrement())
  nombre     String
  email      String
  direction  String
  usuarioId  Int
  usuario    User     @relation(fields: [usuarioId], references: [id])
  facturas   Factura[]
  createdAt  DateTime @default(now())
}

model Factura {
  id          Int      @id @default(autoincrement())
  numero      String   @unique
  fecha       DateTime
  total       Float
  usuarioId   Int
  usuario     User     @relation(fields: [usuarioId], references: [id])
  clienteId   Int
  cliente     Client   @relation(fields: [clienteId], references: [id])
  pdfUrl      String?
  createdAt   DateTime @default(now())
}
